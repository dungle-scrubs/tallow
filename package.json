{
	"name": "tallow",
	"version": "0.1.0",
	"description": "An opinionated coding agent. Built on pi.",
	"piConfig": {
		"name": "tallow",
		"configDir": ".tallow"
	},
	"type": "module",
	"bin": {
		"tallow": "./dist/cli.js",
		"tallow-install": "./dist/install.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"extensions",
		"skills",
		"templates",
		"themes"
	],
	"scripts": {
		"build": "tsc -p tsconfig.build.json && chmod +x dist/cli.js dist/install.js",
		"dev": "tsc -p tsconfig.build.json --watch",
		"start": "bun dist/cli.js",
		"typecheck": "tsc --noEmit",
		"typecheck:extensions": "tsc --project tsconfig.extensions.json --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "bun test",
		"format:check": "biome format .",
		"postinstall": "mkdir -p src/modes/interactive && ln -sfn ../../../node_modules/@mariozechner/pi-coding-agent/dist/modes/interactive/theme src/modes/interactive/theme",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,jsonc,css}": [
			"biome check --no-errors-on-unmatched"
		]
	},
	"pi": {
		"extensions": [
			"./extensions"
		],
		"skills": [
			"./skills"
		],
		"themes": [
			"./themes"
		]
	},
	"dependencies": {
		"@clack/prompts": "^1.0.0",
		"@mariozechner/pi-coding-agent": "0.52.9",
		"@sinclair/typebox": "0.34.48",
		"commander": "^14.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@mariozechner/pi-agent-core": "0.52.9",
		"@mariozechner/pi-ai": "0.52.9",
		"@mariozechner/pi-tui": "0.52.9",
		"@types/node": "^25.2.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"typescript": "^5.9.3",
		"vscode-languageserver-protocol": "3.17.5"
	},
	"engines": {
		"node": ">=22"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dungle-scrubs/tallow.git"
	},
	"homepage": "https://tallow.dungle-scrubs.com",
	"bugs": {
		"url": "https://github.com/dungle-scrubs/tallow/issues"
	},
	"author": "Kevin Frilot",
	"license": "MIT",
	"keywords": [
		"coding-agent",
		"ai",
		"cli",
		"llm",
		"developer-tools"
	]
}
