{
	"name": "@dungle-scrubs/tallow",
	"version": "0.8.8",
	"description": "An opinionated coding agent. Built on pi.",
	"piConfig": {
		"name": "tallow",
		"configDir": ".tallow"
	},
	"type": "module",
	"workspaces": [
		"packages/tallow-tui"
	],
	"bin": {
		"tallow": "./dist/cli.js",
		"tallow-install": "./dist/install.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"extensions",
		"schemas",
		"skills",
		"templates",
		"themes"
	],
	"packageManager": "bun@1.3.9",
	"scripts": {
		"preinstall": "node -e \"const ua = process.env.npm_config_user_agent || ''; if (!ua.includes('bun')) { console.error('Use Bun: bun install'); process.exit(1); }\"",
		"build": "tsc -p packages/tallow-tui/tsconfig.build.json && tsc -p tsconfig.build.json && chmod +x dist/cli.js dist/install.js",
		"dev": "tsc -p tsconfig.build.json --watch",
		"start": "bun dist/cli.js",
		"typecheck": "tsc --noEmit",
		"typecheck:extensions": "tsc --project tsconfig.extensions.json --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "bun test",
		"test:e2e-profiles": "bun test tests/e2e-profiles",
		"format:check": "biome format .",
		"bench:startup": "bun scripts/benchmark-startup-fast-path.ts",
		"pre-pr": "bash scripts/pre-pr.sh",
		"prepare": "test -d .git && husky || true"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,jsonc,css}": [
			"biome check --no-errors-on-unmatched"
		]
	},
	"pi": {
		"extensions": [
			"./extensions"
		],
		"skills": [
			"./skills"
		],
		"themes": [
			"./themes"
		]
	},
	"dependencies": {
		"@clack/prompts": "^1.0.0",
		"@dungle-scrubs/synapse": "0.1.4",
		"@mariozechner/pi-coding-agent": "0.54.0",
		"@sinclair/typebox": "0.34.48",
		"ai": "^6.0.86",
		"commander": "^14.0.3",
		"unpdf": "^1.4.0",
		"vscode-jsonrpc": "8.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.2",
		"@mariozechner/pi-agent-core": "0.54.0",
		"@mariozechner/pi-ai": "0.54.0",
		"@mariozechner/pi-tui": "workspace:*",
		"@types/node": "25.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"typescript": "^5.9.3",
		"vscode-languageserver-protocol": "3.17.5"
	},
	"engines": {
		"node": ">=22"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dungle-scrubs/tallow.git"
	},
	"homepage": "https://tallow.dungle-scrubs.com",
	"bugs": {
		"url": "https://github.com/dungle-scrubs/tallow/issues"
	},
	"overrides": {
		"@mariozechner/pi-tui": "workspace:*",
		"@mariozechner/pi-coding-agent>@mariozechner/pi-tui": "workspace:*",
		"ajv": "8.18.0",
		"fast-xml-parser": "5.3.6",
		"minimatch": "10.2.1"
	},
	"author": "Kevin Frilot",
	"license": "MIT",
	"keywords": [
		"coding-agent",
		"ai",
		"cli",
		"llm",
		"developer-tools"
	]
}
