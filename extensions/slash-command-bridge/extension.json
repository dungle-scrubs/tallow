{
	"name": "slash-command-bridge",
	"version": "0.1.0",
	"description": "Expose slash commands as tools the model can invoke",
	"whenToUse": "Use when the model should invoke slash commands through a tool.",
	"capabilities": {
		"tools": ["run_slash_command"],
		"commands": ["release-memory"],
		"events": ["agent_end", "before_agent_start", "session_before_switch"]
	},
	"permissionSurface": {
		"filesystem": "none",
		"shell": false,
		"network": false,
		"subprocess": false
	},
	"category": "tool",
	"tags": ["commands", "automation", "tools"],
	"files": ["index.ts"],
	"relationships": [
		{
			"type": "enhances",
			"extension": "clear"
		},
		{
			"type": "enhances",
			"extension": "context-usage"
		},
		{
			"type": "enhances",
			"extension": "show-system-prompt"
		},
		{
			"type": "enhances",
			"extension": "session-memory"
		}
	]
}
